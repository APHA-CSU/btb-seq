nextflow_process {

    name "Test Process deduplicate"
    script "main.nf"
    process "deduplicate"

    test("Should generate fastq files from gzipped input files") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = ["phix-m", file("${projectDir}/tests/data/phix_test/phix-m_S800_R1_001.fastq.gz"), file("${projectDir}/tests/data/phix_test/phix-m_S800_R2_001.fastq.gz")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
