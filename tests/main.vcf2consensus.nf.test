nextflow_process {

    name "Test Process vcf2Consensus"
    script "main.nf"
    process "vcf2Consensus"

    test("Should produce a masked consensus fasta file from input vcf and bed files") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
            }
            process {
                """
                input[0] = ["phix-m",
                            file("${projectDir}/tests/data/phix_test/mask.bed"),
                            file("${projectDir}/tests/data/phix_test/nonmasked-regions.bed"),
                            file("${projectDir}/tests/data/phix_test/phix-m.vcf.gz"), 
                            file("${projectDir}/tests/data/phix_test/phix-m.vcf.gz.csi"),
                            file("${projectDir}/tests/data/phix_test/phix-m.fas")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.consensus).match()
            assert path(process.out.nCount[0]).readLines().contains('Sample,Ncount,ResultLoc')
        }

    }

}
