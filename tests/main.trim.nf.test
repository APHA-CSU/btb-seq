nextflow_process {

    name "Test Process trim"
    script "main.nf"
    process "trim"

    test("Should run trimmomatic on input fastq files") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = ["tinyreads", file("${projectDir}/tests/data/tinyreads/dedup_1.fastq"), file("${projectDir}/tests/data/tinyreads/dedup_2.fastq"), file("${projectDir}/references/adapter.fasta")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
