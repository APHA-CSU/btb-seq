nextflow_process {

    name "Test Process map2Ref"
    script "main.nf"
    process "map2Ref"

    test("Should map reads to reference genome") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = ["phix-m", file("${projectDir}/tests/data/phix_test/trimmed_1.fastq"), file("${projectDir}/tests/data/phix_test/trimmed_2.fastq"), file("${projectDir}/data/phiX_test/phix-m.fas")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
