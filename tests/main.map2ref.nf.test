nextflow_process {

    name "Test Process map2Ref"
    script "main.nf"
    process "map2Ref"

    test("Should maps reads to reference genome") {

        when {
            params {
                outdir = "tests/results"
            }
            process {
                """
                input[0] = ["tinyreads", file("${projectDir}/tests/data/tinyreads/dedup_1.fastq"), file("${projectDir}/tests/data/tinyreads/dedup_2.fastq"), file("${projectDir}/references/Mycbovis-2122-97_LT708304.fas")]
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
