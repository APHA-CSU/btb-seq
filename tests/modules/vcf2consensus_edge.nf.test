nextflow_process {

    name "Test Process vcf2Consensus"
    script "main.nf"
    process "VCF2CONSENSUS"

    test("Should produce a masked consensus fasta file from edge-cases input vcf and bed files") {

        when {
            params {
                ref = "${projectDir}/tests/data/edge-cases.fas"
                min_freq_alt = 0.8
                outdir = "${env('PWD')}"
                today = ""
                dataDir = "test"
            }
            process {
                """
                input[0] = params.ref
                input[1] = ["edge-cases",
                            file("${projectDir}/tests/data/edge-cases.mask.bed"),
                            file("${projectDir}/tests/data/edge-cases.nonmasked-regions.bed"),
                            file("${projectDir}/tests/data/edge-cases.vcf.gz"), 
                            file("${projectDir}/tests/data/edge-cases.vcf.gz.csi")]
                input[2] = params.min_freq_alt
                input[3] = params.outdir
                input[4] = params.today
                input[5] = params.dataDir
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out.consensus).match()
            assert path(process.out.nCount[0]).readLines().contains('Sample,Ncount,ResultLoc') 
        }

    }

}