nextflow_process {

    name "Test Process idNonBovis"
    script "main.nf"
    process "IDNONBOVIS"

    test("Should run Kraken and Bracken to classify input fastq files") {

        when {
            params {
                kraken2db = "/opt/Kraken2/test-db/"
                lowmem = ""
                rmInter = false
            }
            process {
                """
                input[0] = ["phix-m", file("${projectDir}/tests/data/phix_test/outcome.txt"),
                            file("${projectDir}/tests/data/phix_test/trimmed_1.fastq"),
                            file("${projectDir}/tests/data/phix_test/trimmed_2.fastq")]
                input[1] = params.kraken2db
                input[2] = params.lowmem
                input[3] = params.rmInter
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}